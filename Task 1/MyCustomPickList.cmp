<aura:component implements="flexipage:availableForAllPageTypes" controller="searchCases">
    <aura:attribute name="strName" type="String" default=""/>
    <aura:attribute name="Fields" type="String"/> 
    <aura:attribute name="data" type="Object"/>
    <aura:attribute name="columns" type="List"/>
    
    <lightning:layout>
        <lightning:layoutItem padding="around-small" size="6">
            <div aria-labelledby="Filter">
                <!-- BOXED AREA -->
                <fieldset class="slds-box slds-theme--default slds-container--small">
                    <legend class="slds-text-heading--small 
                                   slds-p-vertical--medium">
                        Filter
                    </legend>
                    <lightning:layout >
                        <lightning:layoutItem padding="around-small" size="8">
                            <form class="slds-form--stacked">          
                                <lightning:input aura:id="filter" label="Find string"
                                                 name="findString"
                                                 value="{!v.strName}"
                                                 minlength="3"/> 
                                <lightning:button label="search" 
                                                  class="slds-m-top--medium"
                                                  variant="brand"
                                                  onclick="{!c.onFilterClick}"/>
                            </form>
                        </lightning:layoutItem>
                    </lightning:layout>
                </fieldset>
            </div>
        </lightning:layoutItem>
    </lightning:layout>
    <div style="height: 150px">
        <lightning:datatable data="{!v.data}" 
                             keyField="id"
                             columns="{!v.columns}"/> 
    </div>
</aura:component>